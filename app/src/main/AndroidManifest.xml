<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.amirsayonara.jadwalmingguan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_jadwal_mingguan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_jadwal_mingguan_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EditJadwalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.amirsayonara.jadwalmingguan.JadwalHarianActivity" />
        </activity>
        <activity android:name=".TambahJadwalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.amirsayonara.jadwalmingguan.JadwalHarianActivity" />
        </activity>
        <activity
            android:name=".JadwalHarianActivity"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.amirsayonara.jadwalmingguan.JadwalActivity" />
        </activity>
        <activity
            android:name=".JadwalActivity"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.amirsayonara.jadwalmingguan.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>